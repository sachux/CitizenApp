{
  "name": "citizenui",
  "version": "0.0.1",
  "scripts": {
    "start": "ui5 serve --config=uimodule/ui5.yaml  --open index.html",
    "build:ui": "run-s  build:uimodule",
    "test": "run-s lint karma",
    "karma-ci": "karma start karma-ci.conf.js",
    "clearCoverage": "shx rm -rf coverage",
    "karma": "run-s clearCoverage karma-ci",
    "lint": "eslint .",
    "build:mta": "mbt build",
    "deploy:cf": "cross-var cf deploy mta_archives/citizenui_$npm_package_version.mtar",
    "deploy": "run-s build:mta deploy:cf",
    "serve:uimodule": "ui5 serve --config=uimodule/ui5.yaml",
    "build:uimodule": "ui5 build --config=uimodule/ui5.yaml --clean-dest --dest deployer/resources/webapp --include-task=generateManifestBundle"
  },
  "devDependencies": {
    "@ui5/cli": "^2.14.1",
    "cross-var": "^1.1.0",
    "eslint": "^7.32.0",
    "karma": "^6.3.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.1.0",
    "karma-ui5": "^2.3.4",
    "mbt": "^1.2.7",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ui5-middleware-cfdestination": "^0.7.3",
    "ui5-middleware-livereload": "^0.5.8",
    "ui5-task-zipper": "^0.4.7"
  },
  "ui5": {
    "dependencies": [
      "ui5-middleware-livereload",
      "ui5-middleware-cfdestination",
      "ui5-task-zipper"
    ]
  },
  "dependencies": {
    "app-deployer": "file:deployer"
  }
}
